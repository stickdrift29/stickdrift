<?xml version="1.0" encoding="UTF-8"?>
<window id="9999">
    <onload>AlarmClock(hidemenu,setfocus(9999),02:00,true)</onload>
    <onunload>CancelAlarm(hidemenu,true)</onunload>
    <defaultcontrol always="true">9001</defaultcontrol>
    <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
    <controls>
        <!-- Bottom bar (same visual style) -->
        <control type="image">
            <left>0</left>
            <bottom>12</bottom>
            <width>fullscreenWidth</width>
            <height>80</height>
            <texture>discsurface30%.png</texture>
            <colordiffuse>darkgrey</colordiffuse>
            <aspectratio>black</aspectratio>
            <visible>!window.isactive(FullscreenInfo)</visible>
        </control>

        <!-- Horizontal button row -->
        <control type="grouplist" id="9001">
            <posx>25%</posx>
            <bottom>-75</bottom>
            <width>1200</width>
            <height>150</height>
            <align>left</align>
            <itemgap>20</itemgap>
            <orientation>horizontal</orientation>

            <!-- Button: Next episode now -->
            <control type="button" id="201">
                <onclick>SetProperty(tvskipintro_outro_choice,next,10000)</onclick>
                <onclick>PlayerControl(Next)</onclick>
                <onclick>Action(Close)</onclick>
                <description>Next Episode</description>
                <height>50</height>
                <width>auto</width>
                <align>center</align>
                <aligny>center</aligny>
                <label>NÃ¤chste Folge</label>
                <font>buttonTitle</font>
                <textcolor>white</textcolor>
                <focusedcolor>black</focusedcolor>
                <texturefocus colordiffuse="ff87cefa">discsurface.png</texturefocus>
                <textoffsetx>10</textoffsetx>
            </control>

            <!-- Button: Keep watching -->
            <control type="button" id="202">
                <onclick>SetProperty(tvskipintro_outro_choice,stay,10000)</onclick>
                <onclick>Action(Close)</onclick>
                <top>50</top>
                <description>Keep Watching</description>
                <height>50</height>
                <width>auto</width>
                <align>center</align>
                <aligny>center</aligny>
                <label>Weiter schauen</label>
                <textcolor>white</textcolor>
                <focusedcolor>black</focusedcolor>
                <texturefocus colordiffuse="ff87cefa">discsurface.png</texturefocus>
                <font>buttonTitle</font>
                <textoffsetx>10</textoffsetx>
            </control>

            <!-- Button: Don't ask again -->
            <control type="button" id="210">
                <onclick>SetProperty(tvskipintro_outro_choice,disable,10000)</onclick>
                <onclick>Action(Close)</onclick>
                <top>100</top>
                <description>Don't ask again</description>
                <height>50</height>
                <width>auto</width>
                <align>center</align>
                <aligny>center</aligny>
                <label>Nicht mehr fragen</label>
                <textcolor>white</textcolor>
                <focusedcolor>black</focusedcolor>
                <texturefocus colordiffuse="ff87cefa">discsurface.png</texturefocus>
                <font>buttonTitle</font>
                <textoffsetx>10</textoffsetx>
            </control>

            <!-- Hidden focus catcher to close -->
            <control type="button" id="9999">
                <posx>-500</posx>
                <posy>0</posy>
                <width>1-col</width>
                <height>2-row</height>
                <onfocus>action(close)</onfocus>
            </control>
        </control>
    </controls>
</window>
