<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.skipintro" version="2.0.10" name="TV Skip Intro" provider-name="aenema,Blatorone">
	<requires>
		<import addon="xbmc.python" version="3.0.0" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="main.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.service" library="service.py" start="startup" />
	<extension point="xbmc.python.script" library="default.py" executable="true" />
	<extension point="xbmc.addon.metadata">
	<language>de_de</language>
	<language>en_gb</language>
        <description>Prompt a Skip Intro dialog Netflix style. Skips intro for your favourite shows. The addon creates a database of your shows and stores a custom set skip value</description>
		<summary lang="en">Skip TV Shows Intro</summary>
		<platform>all</platform>
		<website>-</website>
		<email>-</email>
		<forum>-</forum>
		<source>-</source>
		<news></news>
        <assets>
            <icon>icon.png</icon>
		</assets>
	</extension>
</addon>
